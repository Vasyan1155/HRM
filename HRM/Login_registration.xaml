<Window x:Class="HRM.Login_registration"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:HRM"
        mc:Ignorable="d"
            Title="Login" Height="450" Width="400">
    <Grid VerticalAlignment="Center">
        <StackPanel Margin="20">
            <TextBlock Text="Логин:" />
            <TextBox x:Name="loginText"  />

            <TextBlock Text="Пароль:" />
            <TextBox x:Name="PasswordText"  />
            <Button Content="Войти"  Click="Button_Click" />
            <TextBlock></TextBlock>
            <Button Click="Button_Click_1">Регистрация</Button>
        </StackPanel>
    </Grid>
</Window>
